<%= form_for :movie ,url: movies_path do |f| %>
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-12">
			<div class="row">
				<div class="col-sm-6">
					<img alt="Bootstrap Image Preview" src="http://lorempixel.com/140/140/" />
				</div>
				<div class="col-sm-6">
					<div class="row">
						<div class="col-sm-6">
              <div class = "row">
                <%= f.label :title %><br>
                <%= f.text_field :title, class: "form-control"%>
              </div>
              <div class = "row">
                <%= f.label :genre %><br>
                <%= f.text_field :genre, class: "form-control" %>
              </div>
              <div class = "row">
                <%= f.label :rating %><br>
                <%= f.number_field :rating, class: "form-control" %>
              </div>
              <div class = "row">
                <%= f.label :plot %><br>
                <%= f.text_area :plot, class: "form-control" %>
              </div>

            </div>


						<div class="col-sm-6">
              <div class = "row">
                <%= f.label :website %><br>
                <%= f.text_field :web, class: "form-control" %>
              </div>
              <div class = "row">
                <%= f.label :year %><br>
                <%= f.text_field :year, class: "form-control" %>
              </div>
              <div class = "row">
                <%= f.label :cast %><br>
                <%= f.text_area :cast, class: "form-control" %>
              </div>
              <br>
              <div class = "row text-center">
                <%= f.submit class: "btn btn-success"%>
              </div>

						</div>
          </div>
        </div>
      </div>
    </div>
		</div>
	</div>
<%end%>
